.container
  .row
    .col-lg-10.col-lg-offset-1.text-center
      %h2= t("activerecord.models.location") + t("views.index")

%section
  .container
    .row
      .col-lg-12.text-center
        %h2= @location.name
        %h3= @location.address
        = link_to t("links.back"), locations_path, class: "btn btn-default"
        = link_to t("links.edit"), edit_location_path(@location), class: "btn btn-success"
        = link_to t("links.destroy"), @location, method: :delete, data: { confirm: t("messages.are_you_sure") }, class: "btn btn-danger"
    %hr.small
  / /.row
  / /.container
