= form_for(resource, html: {class: "form-signin"}, as: resource_name, url: session_path(resource_name)) do |f|
  %h2= t("views.user.sign_in")
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, class: "form-control", value: @email
  .field
    = f.label :password
    = f.password_field :password, autocomplete: "off", class: "form-control", value: @password
  - if devise_mapping.rememberable?
    .field
      - if @email && @password
        = f.check_box :remember_me, checked: true
      - else
        = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit t("links.user.sign_in"), class: "btn btn-default"
  = render "users/shared/links"
