= form_for @taxi do |f|
  - if @taxi.errors.any?
    #error_explanation
      %h2= "#{pluralize(@taxi.errors.count, "error")} prohibited this taxi from being saved:"
      %ul
        - @taxi.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .field
    = f.label :type_name
    = f.text_field :type_name, class: "form-control"
  .actions
    = link_to t("links.back"), taxis_path, class: "btn btn-default"
    = f.submit class: "btn btn-primary"
