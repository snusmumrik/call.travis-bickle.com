.container
  .row
    .col-lg-10.col-lg-offset-1.text-center
      - if @order.created_at == @order.updated_at
        %h2#title.vertical-margin-50 配車のご依頼を承りました。
        .vertical-margin-50
          %b#sub-title 情報が更新されるまで、しばらくこのままでお待ちください。
      - else
        %h2.vertical-margin-50 配車依頼情報

%section
  .container
    .row
      .col-lg-6.col-lg-offset-3
        %table.table
          %tr
            %th= t("activerecord.attributes.order.address")
            %td= @order.address
          %tr
            %th= t("activerecord.attributes.order.keyword")
            %td= @order.keyword
          %tr
            %th= t("activerecord.attributes.order.taxi")
            %td#taxi= @order.taxis.first.try(:name)
          %tr
            %th= t("activerecord.attributes.order.assigned_at")
            - if current_user.admin?
              %td#assigned_at= @order.assigned_at.strftime("%m月%d日 %H:%M") rescue nil
            - else
              %td#assigned_at= @order.assigned_at.strftime("%H:%M") rescue nil
          - if current_user.admin?
            %tr
              %th= t("activerecord.attributes.order.picked_up_at")
              %td#assigned_at= @order.picked_up_at.strftime("%m月%d日 %H:%M") rescue nil
            %tr
              %th= t("activerecord.attributes.order.arrived_at")
              %td#assigned_at= @order.arrived_at.strftime("%m月%d日 %H:%M") rescue nil
        = hidden_field_tag "order_device_token", @order.device_token
        = hidden_field_tag "websocket_url" , @websocket_url
.container
  .row
    #loading.text-center.hidden= image_tag "/loading.gif"
    .col-lg-10.col-lg-offset-1.text-center
      - if current_user.admin?
        / Map
        %section#contact.map
          %iframe{:frameborder => "0", :height => "100%", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :width => "100%", :src => "https://maps.google.com/maps?hl=ja&ie=UTF8&q=#{@order.address}&output=embed"}

        .vertical-margin-50= link_to t("links.back"), orders_path, class: "btn btn-default btn-lg"
      - else
        #order_back.vertical-margin-50= link_to t("links.order.back"), new_order_path, class: "btn btn-default btn-lg disabled"
