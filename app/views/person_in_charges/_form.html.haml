= form_for @person_in_charge do |f|
  - if @person_in_charge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person_in_charge.errors.count, "error")} prohibited this person_in_charge from being saved:"
      %ul
        - @person_in_charge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .actions
    = f.submit class: "btn btn-default"
